# TruckerCore Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon/public key
SUPABASE_ANON=your-anon-key-here

# =============================================================================
# ERROR TRACKING (OPTIONAL)
# =============================================================================
# Get from: https://sentry.io

SENTRY_DSN=https://your-dsn@sentry.io/project-id

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Set to false for production
USE_MOCK_DATA=false

# Application version (auto-generated in CI/CD)
APP_VERSION=1.0.0

# Release channel: production, staging, development
RELEASE_CHANNEL=production

# Git commit hash (auto-generated in CI/CD)
GIT_COMMIT=local

# =============================================================================
# FEATURE FLAGS (OPTIONAL)
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable debug logging
DEBUG_LOGGING=false

# =============================================================================
# NOTES
# =============================================================================
# 
# - Never commit .env files to version control
# - Use different .env files for different environments:
#   - .env.development
#   - .env.staging  
#   - .env.production
#
# - In production, use --dart-define instead of .env:
#   flutter build apk --dart-define=SUPABASE_URL=... --dart-define=SUPABASE_ANON=...
#
# =============================================================================
