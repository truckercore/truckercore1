{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.truckercore.example.com/events/alert.triggered/v1.schema.json",
  "title": "alert.triggered v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "topic",
    "version",
    "aggregate_type",
    "aggregate_id",
    "payload",
    "created_at"
  ],
  "properties": {
    "id": { "type": "integer" },
    "topic": { "const": "alert.triggered" },
    "version": { "type": "string", "pattern": "^[0-9]+$" },
    "aggregate_type": { "type": "string", "enum": ["alert"] },
    "aggregate_id": { "type": "string", "format": "uuid" },
    "created_at": { "type": "string", "format": "date-time" },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["org_id", "user_id", "alert_kind"],
      "properties": {
        "org_id": { "type": "string", "format": "uuid" },
        "user_id": { "type": "string", "format": "uuid" },
        "alert_kind": { "type": "string", "enum": ["saved_search", "system", "exception"] },
        "load_id": { "type": "string", "format": "uuid" },
        "truck_post_id": { "type": "string", "format": "uuid" },
        "match_payload": { "type": "object" }
      }
    }
  }
}
