{
  "package": {
    "productName": "TruckerCore",
    "version": "1.2.3"
  },
  "tauri": {
    "bundle": {
      "targets": ["msi", "msix", "dmg", "app", "deb", "rpm"],
      "identifier": "com.truckercore.app",
      "publisher": "TruckerCore, Inc.",
      "icon": [
        "src-tauri/icons/32x32.png",
        "src-tauri/icons/128x128.png",
        "src-tauri/icons/128x128@2x.png",
        "src-tauri/icons/icon.icns",
        "src-tauri/icons/icon.ico"
      ],
      "windows": {
        "certificateThumbprint": "${TAURI_WIN_CERT_THUMBPRINT}",
        "digestAlgorithm": "sha256",
        "timestampUrl": "http://timestamp.digicert.com"
      },
      "macOS": {
        "entitlements": "src-tauri/entitlements.plist",
        "exceptionDomain": "app.truckercore.com"
      }
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://downloads.truckercore.com/stable/latest.json"
      ],
      "pubkey": "${TAURI_UPDATER_PUBKEY}"
    },
    "security": {
      "csp": "default-src 'self' https://app.truckercore.com https://downloads.truckercore.com; img-src 'self' https://app.truckercore.com data: blob:; media-src 'self' https://app.truckercore.com; connect-src 'self' https://app.truckercore.com https://downloads.truckercore.com wss://app.truckercore.com; style-src 'self' 'unsafe-inline' https://app.truckercore.com; font-src 'self' https://app.truckercore.com data:; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://app.truckercore.com"
    },
    "allowlist": {
      "updater": { "all": true },
      "shell": { "all": false },
      "dialog": { "all": true },
      "window": { "all": true },
      "event": { "all": true }
    },
    "windows": [
      {
        "title": "TruckerCore",
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "width": 1200,
        "height": 800,
        "url": "https://app.truckercore.com"
      }
    ]
  }
}
