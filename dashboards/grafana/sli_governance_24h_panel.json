{
  "type": "table",
  "title": "SLI Governance (24h)",
  "targets": [
    {
      "refId": "A",
      "format": "table",
      "datasource": "Postgres",
      "rawSql": "select g.org_id, g.key, g.ratio, g.p95, t.p95_ms, t.success_ratio from public.v_sli_governance_24h g left join public.slo_targets_global t on t.key=g.key order by g.org_id, g.key"
    }
  ],
  "options": {
    "showHeader": true,
    "footer": { "show": false },
    "cellRenderer": "auto"
  },
  "fieldConfig": {
    "overrides": [
      {
        "matcher": { "id": "byName", "options": "ratio" },
        "properties": [
          {
            "id": "custom.cellOptions",
            "value": {
              "mode": "gradient",
              "color": {
                "mode": "palette-classic",
                "thresholds": [
                  { "color": "red", "value": 0 },
                  { "color": "orange", "value": 0.8 },
                  { "color": "green", "value": 0.98 }
                ]
              }
            }
          }
        ]
      },
      {
        "matcher": { "id": "byName", "options": "p95" },
        "properties": [
          {
            "id": "custom.cellOptions",
            "value": {
              "mode": "gradient",
              "color": {
                "mode": "palette-classic",
                "thresholds": [
                  { "color": "green", "value": 0 },
                  { "color": "orange", "value": 1500 },
                  { "color": "red", "value": 5000 }
                ]
              }
            }
          }
        ]
      }
    ]
  }
}
