# Production Environment Variables (template)
# Replace placeholders with real values in your deployment environment or secrets store

# Database
DATABASE_URL=postgresql://user:password@prod-db.example.com:5432/fleet_production
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis (for WebSocket scaling)
REDIS_URL=redis://prod-redis.example.com:6379
REDIS_TLS=true

# WebSocket
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com
WS_PORT=3001

# Maps
NEXT_PUBLIC_MAP_STYLE_URL=https://basemaps.cartocdn.com/gl/positron-gl-style/style.json
# Or Mapbox (requires account)
# NEXT_PUBLIC_MAP_STYLE_URL=mapbox://styles/mapbox/streets-v12
# NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_production_token

# Application
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NODE_ENV=production
PORT=3000

# Authentication (NextAuth.js)
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-super-secret-production-key-min-32-chars

# External APIs
GOOGLE_MAPS_API_KEY=your_production_google_maps_key
OPENWEATHER_API_KEY=your_production_weather_key

# Notifications
TWILIO_ACCOUNT_SID=your_production_twilio_sid
TWILIO_AUTH_TOKEN=your_production_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
SENDGRID_API_KEY=your_production_sendgrid_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Monitoring
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project
SENTRY_ORG=your-org
SENTRY_PROJECT=fleet-manager
NEW_RELIC_LICENSE_KEY=your_newrelic_key
NEW_RELIC_APP_NAME=fleet-manager-production

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_GEOFENCING=true
ENABLE_MAINTENANCE_SCHEDULER=true
ENABLE_ROUTE_OPTIMIZATION=true
# UI Performance (Phase 4)
NEXT_PUBLIC_ENABLE_VIRTUAL_SCROLLING=true
NEXT_PUBLIC_ENABLE_INFINITE_SCROLL=true
NEXT_PUBLIC_ENABLE_ADVANCED_FILTERS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITOR=true
# Performance Thresholds
NEXT_PUBLIC_VIRTUAL_SCROLL_THRESHOLD=50
NEXT_PUBLIC_INFINITE_SCROLL_PAGE_SIZE=20

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
