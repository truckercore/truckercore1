# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=Freight Management System
NEXT_PUBLIC_VERSION=1.0.0

# Database (when ready)
DATABASE_URL=postgresql://user:password@host:5432/freight_db

# FMCSA API Integration
FMCSA_API_KEY=your_fmcsa_api_key
FMCSA_API_URL=https://mobile.fmcsa.dot.gov/qc/services

# Insurance Verification
INSURANCE_API_KEY=your_insurance_api_key
INSURANCE_API_URL=https://insurance-verification-api.com

# Document Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=freight-documents

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_key
SENDGRID_FROM_EMAIL=noreply@your-domain.com

# Analytics
NEXT_PUBLIC_GA_ID=UA-XXXXXXXXX-X
NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true


# Supabase (Database)
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_public_key
# Feature flag to enable DB persistence in the UI
NEXT_PUBLIC_ENABLE_DB=false


# Fleet Manager Dashboard (WebSocket & Map)
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_MAP_STYLE_URL=https://basemaps.cartocdn.com/gl/positron-gl-style/style.json
