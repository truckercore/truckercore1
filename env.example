# Supabase
SUPABASE_URL=https://<project>.supabase.co
SUPABASE_DB_URL=postgresql://postgres:postgres@localhost:54322/postgres
SUPABASE_ANON_KEY=<anon>
SUPABASE_SERVICE_ROLE_KEY=<service_role>

# Edge Functions
FUNC_URL=http://127.0.0.1:54321/functions/v1
TEST_JWT=<jwt-for-test-user>

# AI Trainer / Delivery
TRAINER_CALLBACK_URL=${FUNC_URL}/ai_trainer_callback
TRAINER_WEBHOOK_SECRET=whsec_xxxxxxxxx
# HOS trainer webhook invoked by cron
TRAINER_WEBHOOK_HOS=https://trainer.example.com/train/hos
ADMIN_PROMOTE_KEY=promote_xxxxxxxxx

# Model servers (HTTP endpoints you control)
ETA_MODEL_ENDPOINT=https://models.truckercore.ai/eta:predict
MATCH_MODEL_ENDPOINT=https://models.truckercore.ai/match:score
FRAUD_MODEL_ENDPOINT=https://models.truckercore.ai/fraud:detect
MAINT_MODEL_ENDPOINT=https://models.truckercore.ai/maintenance:predict
INV_MODEL_ENDPOINT=https://models.truckercore.ai/inventory:forecast
ROUTE_SOLVER_URL=https://models.truckercore.ai/vrp:solve

# Reports & Storage
REPORTS_BUCKET=exec-reports
APP_ORIGIN=https://app.example.com

# Tip: commit this as .env.example and load into CI; never commit real secrets.

# SCIM / SAML Identity
SCIM_BEARER_TOKEN=scim_secret_example
# SAML endpoints read saml_configs per org; IdP cert PEM stored in DB

# Application Configuration
NODE_ENV=development
APP_VERSION=1.0.0
GIT_COMMIT=
RELEASE_CHANNEL=stable

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# Auto-Update Configuration
GH_TOKEN=github_pat_your_token_here

# API Integrations

# DAT Load Board API
DAT_API_KEY=your-dat-api-key
DAT_CUSTOMER_ID=your-customer-id
DAT_BASE_URL=https://freight.api.dat.com/v2

# Trimble Maps API
TRIMBLE_API_KEY=your-trimble-api-key
TRIMBLE_BASE_URL=https://pcmiler.alk.com/apis/rest/v1.0

# Samsara Fleet Tracking API
SAMSARA_API_KEY=your-samsara-api-key
SAMSARA_BASE_URL=https://api.samsara.com

# Motive (KeepTruckin) API
MOTIVE_API_KEY=your-motive-api-key
MOTIVE_BASE_URL=https://api.gomotive.com/v1

# Geotab Fleet Management API
GEOTAB_USERNAME=your-geotab-username
GEOTAB_PASSWORD=your-geotab-password
GEOTAB_DATABASE=your-database-name
GEOTAB_SERVER=my.geotab.com

# Omnitracs API
OMNITRACS_API_KEY=your-omnitracs-api-key
OMNITRACS_BASE_URL=https://api.omnitracs.com

# Weather API (OpenWeatherMap)
OPENWEATHER_API_KEY=your-openweather-api-key

# SMS/Phone API (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email API (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@truckercore.com

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Webhook Secrets (HMAC)
SAMSARA_WEBHOOK_SECRET=your-samsara-webhook-secret
MOTIVE_WEBHOOK_SECRET=your-motive-webhook-secret

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379

# PostgreSQL Database (Optional - for heavy analytics)
DATABASE_URL=postgresql://user:password@localhost:5432/truckercore

# Analytics & Monitoring
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_VOICE_COMMANDS=false
ENABLE_ML_ROUTE_OPTIMIZATION=false

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Map Providers
MAPBOX_ACCESS_TOKEN=your-mapbox-token
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Document Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=truckercore-documents

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30


# Web maintenance notifications (optional)
NEXT_PUBLIC_MAINTENANCE_WEBHOOK=
NEXT_PUBLIC_WEBHOOK_ENABLED=false


# --- Production Web App Configuration (example) ---
NEXT_PUBLIC_APP_URL=https://app.fleetmanager.com
NODE_ENV=production

# Data Source
USE_MOCK_DATA=false
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxx...
SUPABASE_SERVICE_ROLE_KEY=eyJxxx...
DATABASE_URL=postgresql://user:password@host:5432/database

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=7d

# Rate Limiting / Redis
REDIS_URL=redis://localhost:6379
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/api/ws

# Monitoring (optional)
SENTRY_DSN=
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# External Services (optional)
GOOGLE_MAPS_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
SENDGRID_API_KEY=

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_VOICE_COMMANDS=true
ENABLE_OFFLINE_MODE=true
ENABLE_BACKGROUND_LOCATION=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
